{{/* juno.tmpl */}}
{{ define "starknet" }}
  starknet:
    tty: true
    environment:
      - TERM=xterm-256color
      - COLORTERM=truecolor
    stop_grace_period: 30m
    container_name: sedge-starknet-client{{if .ContainerTag}}-{{.ContainerTag}}{{end}}
    restart: unless-stopped
    image: ${L2_IMAGE_VERSION}
    networks:
      - sedge
    volumes:
      - ${L2_DATA_DIR}:/juno/data{{if .MapAllPorts}}
    ports:
      - "{{.L2ApiPort}}:{{.L2ApiPort}}"
      - "{{.L2WsPort}}:{{.L2WsPort}}"
      - "{{.L2MetricsPort}}:{{.L2MetricsPort}}"
      - "{{.L2GrpcPort}}:{{.L2GrpcPort}}"{{end}}
    expose:
      - {{.L2ApiPort}}
      - {{.L2WsPort}}
    command:
      - --colour=true
      - --db-path=/juno/data
      - --eth-node=${ETH_1_ENDPOINT}
      - --http=true
      - --http-host=localhost
      - --http-port={{.L2ApiPort}}
      - --ws=false
      - --ws-host=localhost
      - --ws-port={{.L2WsPort}}
      - --metrics=false
      - --metrics-host=localhost
      - --metrics-port={{.L2MetricsPort}}
      - --grpc=false
      - --grpc-host=localhost
      - --grpc-port={{.L2GrpcPort}}
      - --pending-poll-interval=10s
      {{end}}
